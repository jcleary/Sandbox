#!/bin/bash
echo "################################"
echo "   Authorized Keys Manager"
echo "################################"
echo

keys=(
    'swav:ssh-rsa  swdowka@intellicentrics.com'
    'cleary:ssh-rsa  jcleary@intellicentrics.com'
)


while [ true ]; do
  line_no=0
  for i in "${keys[@]}"
  do
   name=${i%:*}
   ssh_key=${i##*:}

   if grep -Fxq "$ssh_key" ~/.ssh/authorized_keys
   then
    installed='[installed]'
   else
    installed=''
   fi

   echo "$line_no : $name $installed"
   ((line_no=+1))
  done

  printf '%s\n' "${installed_keys[@]}"

  echo
  echo "Which key would you like to add/remove from ~/.ssh/authorized_keys (q to quit) ?"
  read key_no
  echo

  if [ "$key_no" == "q" ]
  then
    exit
  else
    i=${keys[$key_no]}
    name=${i%:*}
    ssh_key=${i##*:}
    if grep -Fxq "$ssh_key" ~/.ssh/authorized_keys
    then      
      echo "Removing #name"
      grep -v "$ssh_key" ~/.ssh/authorized_keys > ~/.ssh/authorized_keys.tmp
      cat ~/.ssh/authorized_keys.tmp > ~/.ssh/authorized_keys
      rm ~/.ssh/authorized_keys.tmp
    else
      echo "Adding #name"
      echo "$ssh_key" >> ~/.ssh/authorized_keys
    fi
  fi
done






#echo ${keys[$key_no]}





