#!/usr/bin/env bash

# To use this on a server, run the following:
#   bash <(curl -s https://raw.githubusercontent.com/jcleary/Sandbox/master/key_add)
#

key_adder()
{
  echo "################################"
  echo "   Authorized Keys Manager"
  echo "################################"
  echo

  keys=(
      'swav:ssh-rsa  swdowka@intellicentrics.com'
      'cleary:ssh-rsa  jcleary@intellicentrics.com'
      'hassan:ssh-rsa  hkhalid@intellicentrics.com'
      'emba:ssh-rsa  embasbm@gmail.com'
      'adeel:ssh-rsa  aejaz@intellicentrics.com'
  )

  while [ true ]; do
    line_no=0
    for i in "${keys[@]}"
    do
     name=${i%:*}
     ssh_key=${i##*:}

     if grep -Fxq "$ssh_key" ~/.ssh/authorized_keys
     then
      is_installed='[installed]'
     else
      is_installed=''
     fi

     echo "$line_no : $name $is_installed"
     ((line_no+=1))
    done

    printf '%s\n' "${installed_keys[@]}"

    echo
    echo "Which key would you like to add/remove from ~/.ssh/authorized_keys (q to quit) ?"
    read key_no

    if [ "$key_no" == "q" ]
    then
      exit 0
    else
      i=${keys[$key_no]}
      name=${i%:*}
      ssh_key=${i##*:}
      if grep -Fxq "$ssh_key" ~/.ssh/authorized_keys
      then      
        echo "Removing $name"
        grep -v "$ssh_key" ~/.ssh/authorized_keys > ~/.ssh/authorized_keys.tmp
        cat ~/.ssh/authorized_keys.tmp > ~/.ssh/authorized_keys
        rm ~/.ssh/authorized_keys.tmp
      else
        echo "Adding $name"
        echo "$ssh_key" >> ~/.ssh/authorized_keys
      fi
    fi
    echo
  done
}

key_adder 

